{
    "version": 2,
    "bunVersion": "1.x",
    "builds": [
        {
            "src": "api/**/*.ts",
            "use": "@vercel/bun"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/favicon.ico",
            "dest": "/public/favicon.ico"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.ts"
        }
    ]
}