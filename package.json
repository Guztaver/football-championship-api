{
  "name": "football-championship-api",
  "version": "1.0.0",
  "description": "Football Championship Management System API built with ElysiaJS and MongoDB",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/app.ts",
    "start": "bun src/app.ts",
    "build": "bun build src/app.ts --outdir ./dist --target bun",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "elysia",
    "mongodb",
    "football",
    "championship",
    "api",
    "crud"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "elysia": "^1.1.22",
    "@elysiajs/swagger": "^1.1.5",
    "@elysiajs/cors": "^1.1.1",
    "mongodb": "^6.10.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.3"
  }
}